depends="bash
 base-files sbase ubase diffutils fzf-minimal dash
 libgcc rc ripgrep pigz file which bsdtar binutils
 man-pages mdocml>=1.13.3 shadow e2fsprogs ncurses
 kbd wpa_supplicant openssh opendoas wifi-firmware
